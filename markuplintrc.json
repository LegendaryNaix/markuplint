{
  "$schema": "./markuplint.schema.json",
  "extends": "rulesets/html-ls",
  "node-rules": [
    {
      "nodeType": "#root",
      "permitted-content": [
        ["#doctype", { "require": true, "times": "once" }],
        ["html", { "require": true, "times": "once" }]
      ],
      "inheritance": true
    },
    {
      "nodeType": "html",
      "permitted-content": [
        ["head", { "require": true, "times": "once" }],
        ["body", { "require": true, "times": "once" }]
      ],
      "attribute": {
        "disallow": [
          "manifest",
          "version"
        ]
      },
      "inheritance": true
    },
    {
      "nodeType": "head",
      "permitted-content": [
        ["title", { "require": true, "times": "once" }],
        ["meta", { "require": false, "times": "zero or more" }],
        ["link", { "require": false, "times": "zero or more" }],
        ["script", { "require": false, "times": "zero or more" }],
        ["noscript", { "require": false, "times": "zero or more" }],
        ["style", { "require": false, "times": "zero or more" }]
      ],
      "inheritance": true
    },
    {
      "nodeType": "body",
      "permitted-content": [
        ["#flow-content", { "require": false, "times": "zero or more" }]
      ],
      "inheritance": true
    }
  ],
  "localRules": [
    {
      "tag": "html",
      "id": null,
      "class": null,
      "extends": "inherit",
      "rules": {
        "tagname-lowercase": ["error", "always"],
        "attr-lowercase": ["error", "always", { "allowPattern": "/âš¡/" }],
        "attr-value-quotes": ["error", "double", { "avoidEscape": true }],
        "attr-value-not-empty": true,
        "attr-no-duplication": ["error", "always"],
        "doctype-first": true,
        "tag-pair": true,
        "tag-self-close": true,
        "spec-char-escape": true,
        "id-unique": true,
        "src-not-empty": true,
        "title-require": true
      }
    },
    {
      "root": "svg",
      "extends": "inherit",
      "rules": {
        "tagname-lowercase": true,
        "attr-lowercase": true,
        "attr-value-double-quotes": true,
        "attr-value-not-empty": true,
        "attr-no-duplication": true,
        "doctype-first": true,
        "tag-pair": true,
        "tag-self-close": true,
        "spec-char-escape": true,
        "id-unique": true,
        "src-not-empty": true,
        "title-require": true
      }
    }
  ]
}
