{
	"private": true,
	"scripts": {
		"bootstrap": "lerna bootstrap",
		"rm": "rm ./node_modules/parse5/lib/index.d.ts",
		"build": "lerna run build",
		"dev": "lerna run --parallel dev & jest --watch",
		"test": "jest --coverage",
		"test:rules": "ava **/src/**/*.test.js !**/lib/**/*.test.js"
	},
	"jest": {
		"verbose": true,
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"node"
		]
	},
	"prettier": {
		"printWidth": 120
	},
	"workspaces": [
		"packages/*",
		"packages/@markuplint/*"
	],
	"devDependencies": {
		"@types/jest": "^23.1.6",
		"ava": "^0.25.0",
		"jest": "^23.4.1",
		"lerna": "^2.11.0",
		"prettier": "^1.13.7",
		"ts-jest": "^23.0.0",
		"tslint": "^5.10.0",
		"tslint-config-prettier": "^1.13.0",
		"tslint-plugin-prettier": "^1.3.0",
		"typescript": "^2.9.2"
	}
}
