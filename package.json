{
	"private": true,
	"scripts": {
		"bootstrap": "lerna bootstrap",
		"build": "lerna run build",
		"clean": "lerna run clean",
		"dev": "lerna run --parallel dev",
		"test": "jest --coverage",
		"test:coverage": "jest --coverage --coverageReporters=text-lcov | coveralls",
		"test:clear": "jest --clearCache",
		"lint": "eslint --fix ./packages/**/*.ts",
		"cli": "ts-node packages/markuplint/src/cli/index.ts",
		"cli:js": "node packages/markuplint/lib/cli/index.js",
		"site:dev": "cd website; yarn site:dev",
		"site:build": "cd website; yarn site:build"
	},
	"jest": {
		"globals": {
			"ts-jest": {
				"tsConfig": "tsconfig.json"
			}
		},
		"verbose": true,
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"node"
		],
		"collectCoverageFrom": [
			"packages/markuplint/src/**/*.ts",
			"packages/@markuplint/*/src/**/*.ts"
		]
	},
	"prettier": {
		"printWidth": 120,
		"tabWidth": 4,
		"useTabs": true,
		"singleQuote": true,
		"trailingComma": "all",
		"bracketSpacing": true
	},
	"workspaces": [
		"packages/*",
		"packages/@markuplint/*",
		"website"
	],
	"devDependencies": {
		"@types/jest": "^24.0.11",
		"@typescript-eslint/eslint-plugin": "^1.5.0",
		"coveralls": "^3.0.3",
		"eslint": "^5.16.0",
		"eslint-config-prettier": "^4.1.0",
		"eslint-plugin-eslint-comments": "^3.1.1",
		"eslint-plugin-jsdoc": "^4.7.0",
		"eslint-plugin-node": "^8.0.1",
		"eslint-plugin-prettier": "^3.0.1",
		"jest": "^24.6.0",
		"lerna": "^3.13.1",
		"prettier": "^1.16.4",
		"ts-jest": "^24.0.1",
		"ts-node": "^8.0.3",
		"typescript": "3.3.4000"
	}
}
