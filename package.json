{
	"private": true,
	"scripts": {
		"bootstrap": "lerna bootstrap",
		"build": "lerna run build",
		"clean": "lerna run clean",
		"dev": "lerna run --parallel dev",
		"test": "jest --coverage",
		"test:coverage": "jest --coverage --coverageReporters=text-lcov | coveralls",
		"test:clear": "jest --clearCache",
		"lint": "eslint --fix ./packages/**/*.ts",
		"schema": "lerna run schema",
		"all": "yarn lint; yarn clean; yarn build; yarn schema; yarn test:clear; yarn test;",
		"cli": "./packages/markuplint/bin/markuplint",
		"site:dev": "cd website; yarn site:dev",
		"site:build": "cd website; yarn site:build"
	},
	"jest": {
		"globals": {
			"ts-jest": {
				"tsConfig": "tsconfig.json"
			}
		},
		"verbose": true,
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"node"
		],
		"collectCoverageFrom": [
			"packages/markuplint/src/**/*.ts",
			"packages/@markuplint/*/src/**/*.ts"
		]
	},
	"prettier": {
		"printWidth": 120,
		"tabWidth": 4,
		"useTabs": true,
		"singleQuote": true,
		"trailingComma": "all",
		"bracketSpacing": true
	},
	"workspaces": [
		"packages/*",
		"packages/@markuplint/*",
		"website"
	],
	"devDependencies": {
		"@types/jest": "^24.0.18",
		"@typescript-eslint/eslint-plugin": "^2.0.0",
		"@typescript-eslint/parser": "^2.0.0",
		"coveralls": "^3.0.6",
		"eslint": "^6.3.0",
		"eslint-config-prettier": "^6.1.0",
		"eslint-plugin-eslint-comments": "^3.1.2",
		"eslint-plugin-jsdoc": "^15.9.1",
		"eslint-plugin-node": "^9.2.0",
		"eslint-plugin-prettier": "^3.1.0",
		"jest": "^24.9.0",
		"lerna": "^3.16.4",
		"prettier": "^1.18.2",
		"ts-jest": "^24.0.2",
		"ts-node": "^8.3.0",
		"typescript": "3.6.2"
	}
}
