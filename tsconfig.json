{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "declaration": true,
    "declarationMap": true,
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "esnext"
    ],
    "outDir": "./lib/",
    "baseUrl": "."
  },
  "exclude": [
    "node_modules",
    "plugin",
    "_*",
    "lib",
    "**/remote.ts",
    "**/*.remote.ts"
  ]
}
